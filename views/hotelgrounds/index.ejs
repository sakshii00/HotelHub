<% layout('layouts/boilerplate') %>
    <h1>All Hotels</h1>
   
        <% hotels.forEach((h )=>{ %>
          <div class="card mb-3 my-5">
            <div class="row">
              <div class="col-md-4">
                    <img src="<%=h.image %>" class="card-img-top" alt="..."> 
              </div>
              <div class=" col-md-8"> 
                <div class="card-body">
                <h3 class="card-title"><%= h.title %></h3>
                <p class='card-text'><%= h.description %> </p>
                <p class="card-text">
                  <small class="text-muted"><%= h.location %> </small>
                </p>
                <a class="btn btn-primary" href="/hotels/<%=h.id %>">view more</a>
                </div>
             </div>
          </div>
          </div>
        <% }) %>

